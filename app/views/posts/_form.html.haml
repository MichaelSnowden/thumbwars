= simple_form_for post, remote: true do |f|
  = f.error_notification
  = f.input :title
  = f.input :content, as: :bootsy
  = f.input :tag_list, label: 'List of tags seperated by a comma'
  = f.submit class: 'btn btn-primary'
  %a.btn{"data-toggle" => "collapse", :href => "#new-post-collapse"}
    Cancel