.panel.panel-default
  .panel-heading
    %h4.panel-title
      %a{'data-toggle'=>'collapse', 'href'=>'#tag-cloud-collapse'}
        Tag Cloud
  .panel-collapse.collapse.in#tag-cloud-collapse
    .panel-body
      = active_link_to "All", all_posts_path, id: "All-tag-link", class: 'tag-link xl', remote: true
      - tag_cloud Post.tag_counts.sort { |x, y| x.name.downcase <=> y.name.downcase }, %w[s m l] do |tag, css_class| 
        = active_link_to tag.name, tagged_posts_path(tag.name), class: (tag.name + "-tag-link tag-link " + css_class), remote: true